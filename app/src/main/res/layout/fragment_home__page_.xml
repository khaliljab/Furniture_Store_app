<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    tools:context=".PageNavgationBar.Home_Page_Fr"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            >

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_period="5000"
                app:iss_delay="0"
                android:scaleX="1"
                android:scaleY="1.01"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="الأقسام"
            android:textColor="@color/main_color_2"
            android:textSize="20sp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cat_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/item_bg_2"
                android:text="الكنب"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cat_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_1"
                    android:text="الإضاءة"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cat_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_2"
                    android:text="السجاد"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cat_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_3"
                    android:text="طاولة سفرة"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cat_5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_4"
                    android:fontFamily="@font/roboto_medium"
                    android:text="غرف نوم"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </HorizontalScrollView>
        <FrameLayout
            android:id="@+id/frameLayout_cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </FrameLayout>

    </LinearLayout>

</FrameLayout>












