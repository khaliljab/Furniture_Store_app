<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="#FCFCFC"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"

    app:cardCornerRadius="10dp"
    android:layoutDirection="rtl">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

       <com.google.android.material.card.MaterialCardView
           android:layout_width="30dp"
           android:layout_height="30dp"
           app:cardCornerRadius="6dp"
           android:backgroundTint="@color/white"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           >

           <ToggleButton
               android:id="@+id/favButton"
               android:layout_width="16dp"
               android:layout_height="20dp"
               android:layout_gravity="center"
               android:layout_weight="0.33"
               android:background="@drawable/fav_toggle_2"
               android:textOff=""
               android:textOn="" />
       </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/product_photo_all"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/photo_item_2"
            />
       <TextView
           android:id="@+id/product_Name_all"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/roboto_medium"
           android:textColor="@color/main_color_2"
           android:text="كنب مقعدين"
           android:textSize="14sp"
           android:layout_marginStart="10dp"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="10dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="10dp"

           >
       <RatingBar
           android:id="@+id/rating_all"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/Widget.AppCompat.RatingBar.Small"
           android:numStars="5"
           android:rating="4"
           android:stepSize="0.5"
           android:isIndicator="true"
           android:progressTint="@color/main_color"
           android:layout_gravity="center"
           />
           <View
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               />
       <com.google.android.material.card.MaterialCardView
           android:layout_width="50dp"
           android:layout_height="25dp"
           app:cardCornerRadius="6dp"
           android:layout_marginEnd="10dp"
           android:backgroundTint="@color/main_color"
           android:layout_gravity=""
           >
           <TextView
               android:id="@+id/product_Price_all"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/roboto_medium"
               android:textColor="@color/white"
               android:text="150 $"
               android:textSize="12sp"
               android:layout_gravity="center"
               />
       </com.google.android.material.card.MaterialCardView>
       </LinearLayout>

</LinearLayout>
</com.google.android.material.card.MaterialCardView>